 year = {2015},
 title = {{The Treatment of Juvenile Fibromyalgia with an Intensive Physical and Psychosocial Program}},
 pages = {731--737},
 volume = {167},
 number = {3},
 journal = {{The Journal of Pediatrics}},
 doi = {10.1016/j.jpeds.2015.06.036},
 file = {Sherry, Brake et al. 2015 - The Treatment of Juvenile Fibromyalgia:Attachments/Sherry, Brake et al. 2015 - The Treatment of Juvenile Fibromyalgia.pdf:application/pdf}
