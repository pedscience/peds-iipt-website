 year = {2019},
 title = {{Parent psychological flexibility in the context of pediatric pain: Brief assessment and associations with parent behaviour and child functioning}},
 pages = {No-Specified},
 journal = {{European Journal of Pain}},
 doi = {10.1002/ejp.1403},
 file = {Timmers, Simons et al. 2019 - Parent psychological flexibility:Attachments/Timmers, Simons et al. 2019 - Parent psychological flexibility.pdf:application/pdf}
