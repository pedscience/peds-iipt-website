 year = {2019},
 title = {{Graded exposure treatment for adolescents with chronic pain (GET  Living): Protocol for a randomized controlled trial enhanced with single  case experimental design}},
 volume = {16},
 journal = {{Contemporary Clinical Trials Communications}},
 doi = {10.1016/j.conctc.2019.100448},
 file = {Simons, Harrison et al. 2019 - Graded exposure treatment for adolescents:Attachments/Simons, Harrison et al. 2019 - Graded exposure treatment for adolescents.pdf:application/pdf}
